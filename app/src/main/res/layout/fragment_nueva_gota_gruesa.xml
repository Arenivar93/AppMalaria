<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nueva_gota_modal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoCard"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardColvol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?android:selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="  Datos de Paciente"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="0dp"
                        android:background="@color/lighgray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgNombre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgNombre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Primer Nombre:"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="textCapWords" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgSegundoNombre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgSegundoNombre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Segundo Nombre:"
                                android:inputType="textCapWords"
                                android:imeOptions="flagNoExtractUi" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgPrimerApellido"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgPrimerApellido"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Primer Apellido:"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="textCapWords" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/marg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgSegundoApellido"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgSegundoApellido"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Segundo Apellido:"
                                android:inputType="textCapWords"
                                android:imeOptions="flagNoExtractUi" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgFechaNac"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgFechaNac"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fecha Nacimiento:"
                                android:imeOptions="flagNoExtractUi" />
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilGgEdad"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/titGgEdad"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Edad:"
                                    android:inputType="number"
                                    android:imeOptions="flagNoExtractUi" />
                            </android.support.design.widget.TextInputLayout>

                            <Spinner
                                android:id="@+id/spEdad"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sexo:" />

                            <Spinner
                                android:id="@+id/spGgSexo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tipo Documento" />

                            <Spinner
                                android:id="@+id/spGgTipoDoc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp" />

                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgNumeroDoc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgNumeroDoc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Numero Documento:"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="number|textCapCharacters" />
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgResponsable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nombre de Responsable"
                                android:imeOptions="flagNoExtractUi" />
                        </android.support.design.widget.TextInputLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Establecimiento del area"/>
                            <Spinner
                                android:id="@+id/spUcsfReferente"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardGota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?android:selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="  Gota Gruesa"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="0dp"
                        android:background="@color/lighgray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/swGgBusqueda"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="  Busqueda Activa?" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgFechaToma"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <EditText
                                android:id="@+id/tvGgFechaToma"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:hint="Fecha de Toma:"
                                android:inputType="date"
                                android:maxLines="1" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgFechaInicioFiebre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <EditText
                                android:id="@+id/tvGgfechaInicioFiebre"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:hint="Fecha Inicio Fiebre:"
                                android:inputType="date"
                                android:maxLines="1" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Resultado Analisis" />

                            <Spinner
                                android:id="@+id/spGgResultado"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Laboratorio leerá" />

                            <Spinner
                                android:id="@+id/spGgLabLee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilGgE6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                                <EditText
                                    android:id="@+id/tvGge6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Correlativo E6:"
                                    android:imeOptions="flagNoExtractUi"
                                    android:inputType="number" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="  Procedencia"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="0dp"
                        android:background="@color/lighgray" />

                    <Switch
                        android:id="@+id/swGgExtranjero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:text="¿Es Extranjero?" />

                    <LinearLayout
                        android:id="@+id/linearExtranjero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pais:"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <Spinner
                            android:id="@+id/spGgPais"
                            android:layout_width="220dp"
                            android:layout_height="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLocal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Departamento"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spGgDepartamento"
                                android:layout_width="220dp"
                                android:layout_height="40dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="    Municipio:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spGgMunicipio"
                                android:layout_width="220dp"
                                android:layout_height="40dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="    Canton:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spGgCanton"
                                android:layout_width="220dp"
                                android:layout_height="40dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Caserio:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spGgCaserio"
                                android:layout_width="220dp"
                                android:layout_height="40dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilGgDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                        <EditText
                            android:id="@+id/tvGgDescripcion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Dirección/Descripción:"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textAutoComplete" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnGgGuardar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary"
                        android:layout_weight="1"
                        android:text="Guardar" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/btnGgCancelar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"
                        android:layout_weight="1"
                        android:text="Cancelar" />


                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
