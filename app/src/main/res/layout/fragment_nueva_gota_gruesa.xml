<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/fondoCard"
android:gravity="center"
android:id="@+id/nueva_gota_modal">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:id="@+id/cardColvol"
                    android:layout_width="900dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:foreground="?android:selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="  Datos de Paciente"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="0dp"
                            android:background="@color/lighgray" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/textoNombre"
                                android:layout_width="600dp"
                                android:layout_height="wrap_content"
                                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/nombre"
                                    android:layout_width="600dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Nombre:"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/textoEdad"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/edad"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:hint="Edad:"/>
                            </android.support.design.widget.TextInputLayout>
                            <Spinner
                                android:id="@+id/spEdad"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/textoResponsable"
                                android:layout_width="600dp"
                                android:layout_height="wrap_content"
                                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">
                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/reponsable"
                                    android:layout_width="600dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Responsable:"/>
                            </android.support.design.widget.TextInputLayout>
                            <Spinner
                                android:id="@+id/spSexo"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardGota"
                    android:layout_width="900dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:foreground="?android:selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="  Gota Gruesa"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="0dp"
                            android:background="@color/lighgray" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Switch
                                android:id="@+id/busqueda"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="23dp"
                                android:text="  Busqueda Activa?"/>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/textFecha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">
                                <EditText
                                    android:id="@+id/fecha"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Fecha Inicio Fiebre:"
                                    android:layout_marginRight="15dp"
                                    android:inputType="date"
                                    android:focusable="false"
                                    android:clickable="true"
                                    android:maxLines="1"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/textE6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">
                                <EditText
                                    android:id="@+id/e6"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dp"
                                    android:hint="Correlativo E6:"
                                    android:inputType="number"/>
                            </android.support.design.widget.TextInputLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="     Leera Laboratorio:"/>
                                <Spinner
                                    android:id="@+id/laboratorio"
                                    android:layout_width="220dp"
                                    android:layout_height="40dp"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cardDireccion"
                    android:layout_width="900dp"
                    android:layout_height="250dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="  Procedencia"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="0dp"
                            android:background="@color/lighgray" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />
                        <Switch
                            android:id="@+id/extranjero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:text="  Â¿Es Extranjero?"/>
                        <LinearLayout
                            android:id="@+id/linearExtranjero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="    Pais:"/>
                            <Spinner
                                android:id="@+id/pais"
                                android:layout_width="220dp"
                                android:layout_height="40dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearLocal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="    Departamento:"/>
                                <Spinner
                                    android:id="@+id/departamento"
                                    android:layout_width="220dp"
                                    android:layout_height="40dp"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="    Municipio:"/>
                                <Spinner
                                    android:id="@+id/municipio"
                                    android:layout_width="220dp"
                                    android:layout_height="40dp"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="    Canton:"/>
                                <Spinner
                                    android:id="@+id/canton"
                                    android:layout_width="220dp"
                                    android:layout_height="40dp"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="    Caserio:"/>
                                <Spinner
                                    android:id="@+id/caserio"
                                    android:layout_width="220dp"
                                    android:layout_height="40dp"/>

                            </LinearLayout>

                        </LinearLayout>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Digite"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
        </LinearLayout>
</ScrollView>
</LinearLayout>
