<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CRUD.gotaGruesa.activityGotaGruesa.GotaGruesaEditActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ly1Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardColvolEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?android:selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="  Datos de Paciente"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="0dp"
                        android:background="@color/lighgray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgNombreEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgNombreEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Primer Nombre:"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="textCapWords" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgSegundoNombreEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgSegundoNombreEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Segundo Nombre:"
                                android:inputType="textCapWords"
                                android:imeOptions="flagNoExtractUi" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgPrimerApellidoEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgPrimerApellidoEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Primer Apellido:"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="textCapWords" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/margEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgSegundoApellidoEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgSegundoApellidoEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Segundo Apellido:"
                                android:inputType="textCapWords"
                                android:imeOptions="flagNoExtractUi" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgFechaNacEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgFechaNacEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Fecha Nacimiento:"
                                android:imeOptions="flagNoExtractUi" />
                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilGgEdadEdit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/titGgEdadEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Edad:"
                                    android:inputType="number"
                                    android:imeOptions="flagNoExtractUi" />
                            </android.support.design.widget.TextInputLayout>

                            <Spinner
                                android:id="@+id/spEdadEdit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sexo:" />

                            <Spinner
                                android:id="@+id/spGgSexoEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tipo Documento" />

                            <Spinner
                                android:id="@+id/spGgTipoDocEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp" />

                        </LinearLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgNumeroDocEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgNumeroDocEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Numero Documento:"
                                android:imeOptions="flagNoExtractUi"
                                android:inputType="number|textCapCharacters" />
                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/titGgResponsableEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nombre de Responsable"
                                android:imeOptions="flagNoExtractUi" />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardGotaEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:foreground="?android:selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="  Gota Gruesa"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="0dp"
                        android:background="@color/lighgray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Switch
                            android:id="@+id/swGgBusquedaEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:text="  Busqueda Activa?" />

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgFechaTomaEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <EditText
                                android:id="@+id/tvGgFechaTomaEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:hint="Fecha de Toma:"
                                android:inputType="date"
                                android:maxLines="1" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/tilGgFechaInicioFiebreEdit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                            <EditText
                                android:id="@+id/tvGgfechaInicioFiebreEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"
                                android:hint="Fecha Inicio Fiebre:"
                                android:inputType="date"
                                android:maxLines="1" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Resultado Analisis" />

                            <Spinner
                                android:id="@+id/spGgResultadoEdit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Laboratorio leerá" />

                            <Spinner
                                android:id="@+id/spGgLabLeeEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tilGgE6Edit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                                <EditText
                                    android:id="@+id/tvGge6Edit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Correlativo E6:"
                                    android:imeOptions="flagNoExtractUi"
                                    android:inputType="number" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardDireccionEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="  Procedencia"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="0dp"
                        android:background="@color/lighgray" />

                    <Switch
                        android:id="@+id/swGgExtranjeroEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:text="¿Es Extranjero?" />

                    <LinearLayout
                        android:id="@+id/linearExtranjeroEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pais:"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <Spinner
                            android:id="@+id/spGgPaisEdit"
                            android:layout_width="220dp"
                            android:layout_height="40dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLocalEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Departamento"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spGgDepartamentoEdit"
                                android:layout_width="220dp"
                                android:layout_height="40dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="    Municipio:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spGgMunicipioEdit"
                                android:layout_width="220dp"
                                android:layout_height="40dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="    Canton:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spGgCantonEdit"
                                android:layout_width="220dp"
                                android:layout_height="40dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Caserio:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="14sp" />

                            <Spinner
                                android:id="@+id/spGgCaserioEdit"
                                android:layout_width="220dp"
                                android:layout_height="40dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tilGgDescripcionEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:errorTextAppearance="@style/MyAppTheme.TextInputLayout">

                        <EditText
                            android:id="@+id/tvGgDescripcionEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Dirección/Descripción:"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textAutoComplete" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnGgGuardarEdit"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="100dp"
                        android:layout_height="100dp"

                        android:layout_marginTop="24dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        app:srcCompat="@drawable/guardar" />

                    <ImageView
                        android:id="@+id/btnGgCancelarEdit"
                        style="?android:borderlessButtonStyle"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:srcCompat="@drawable/borrar" />


                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>