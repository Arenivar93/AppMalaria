<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CRUD.gotaGruesa.activityGotaGruesa.DetalleSemanaGotaGruesa">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvDetallegotaSemama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_weight="3"
            android:text="Detalle de Gotas Gruesas"/>
        <Button
            android:id="@+id/btnNuevaGotaSemana"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Nueva Gota gruesa"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#5b5efa"
                android:layout_weight="1"
                android:text="Nombre"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#5b5efa"
                android:layout_weight="1"
                android:text="Edad"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#5b5efa"
                android:layout_weight="1"
                android:text="Fecha Toma"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#5b5efa"
                android:layout_weight="1"
                android:text="Municipio"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#5b5efa"
                android:layout_weight="1"
                android:text="Canton"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:background="#5b5efa"
                android:layout_weight="1"
                android:text="Caserio"/>
        </LinearLayout>
        <ListView
            android:id="@+id/lvDtalleGotaSemana"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>