<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".CRUD.Colvol.activityColvol.BuscarColvolActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Busqueda de Colvol"
            android:textSize="19sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/municipio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Municipio"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <Spinner
                android:id="@+id/spMun"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/canton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Canton"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <Spinner
                android:id="@+id/spCan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/caserio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caserio"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <Spinner
                android:id="@+id/spCas"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/buscarCriadero"
                android:layout_width="53dp"
                android:layout_height="51dp"
                app:srcCompat="@drawable/buscar"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Colvol"
                android:textSize="19sp"
                android:gravity="center_vertical|center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            android:layout_marginTop="12dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center">
                <TableRow
                    android:background="@color/colorPrimary">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:text="NÂ°"
                        android:textColor="@color/headtableLetra" />
                    <TextView android:text="Nombre"
                        android:layout_width="0dp"
                        android:layout_weight="1.7"
                        android:paddingStart="20dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/headtableLetra"/>
                    <TextView android:text="Canton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingStart="35dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/headtableLetra"/>
                    <TextView android:text="Caserio"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingStart="65dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/headtableLetra"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:paddingBottom="5dp"
                        android:paddingStart="18dp"
                        android:paddingTop="5dp"
                        android:text="Opciones"
                        android:textColor="@color/headtableLetra" />
                </TableRow>
                <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center">
                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tableColvol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center"
                        >
                    </TableLayout>
                </ScrollView>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="14sp"
                android:gravity="center_vertical|center"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>